<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom = "http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/toolbarColor"
        >

        <ImageView
            android:id="@+id/closeHightLight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_brightness_5_white_24dp"
            android:layout_gravity = "right"
            android:layout_marginRight="15dp"
            android:visibility="gone"
            />
        <ImageView
            android:id="@+id/openHIghtLight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_brightness_7_white_24dp"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:visibility="visible"
            />

     </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <include layout="@layout/aty_artical"/>

    <com.appyvet.rangebar.RangeBar
        android:id="@+id/rangbar"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_gravity="bottom"
        custom:connectingLineColor="@color/toolbarColor"
        custom:tickColor="@color/toolbarColor"
        custom:connectingLineWeight="2dp"
        custom:selectorColor="@android:color/white"
        custom:selectorSize="2dp"
        custom:pinColor="@color/toolbarColor"
        custom:tickHeight="2dp"
        custom:pinMaxFont="15dp"
        custom:rangeBar="false"
        />
    </FrameLayout>

</LinearLayout>